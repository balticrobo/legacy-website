{% extends '_base.html.twig' %}

{% block body %}
  <div class='wrapper'>
    {% include '_common/header.html.twig' %}
  </div>
  {% include '_common/menu.html.twig' %}
  <div class='wrapper'>
    <div class='container col-12 col-md-6 offset-md-3'>
      {{ form_start(form, {class: 'form', attr: {novalidate: 'novalidate'}}) }}
      <div class='row'>
        <div class='col-12 col-sm-6'>
          {{ form_row(form.email) }}
          {{ form_row(form.password.first) }}
          {{ form_row(form.password.second) }}
        </div>
        <div class='col-12 col-sm-6'>
          {{ form_row(form.forename) }}
          {{ form_row(form.surname) }}
        </div>
        <div class='col-12 col-sm-6'>
          {{ form_row(form.terms) }}
        </div>
        <div class='col-12 col-sm-6'>
          {{ form_row(form.gdpr) }}
        </div>
        <div class='col-12'>
          {{ form_row(form.newsletterAndMarketing) }}
        </div>
        <div class='col-12 col-sm-6 offset-sm-6'>
          <button type="submit" class="btn btn-block btn-primary">{{ '_button.register'|trans }}</button>
        </div>
      </div>
      {{ form_end(form) }}
    </div>
    <div class='container col-12 col-md-6 offset-md-3 pb-3'>
      <hr/>
      <a href='{{ path('balticrobo_website_default_terms') }}' target='_blank'>
        *{{ 'security.register.read_terms'|trans }}
      </a><br/>
      <a href='{{ path('balticrobo_website_default_gdpr') }}' target='_blank'>
        **{{ 'security.register.read_gdpr'|trans }}
      </a>
    </div>
  </div>
{% endblock %}
