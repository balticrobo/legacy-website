{% extends '_base.html.twig' %}

{% block body %}
  <div class='wrapper'>
    {% include '_common/header.html.twig' %}
  </div>
  {% include '_common/menu.html.twig' %}
  <div class='wrapper'>
    <div class='container'>
      <div class='row'>
        <div class='col-12 col-md-6 offset-md-3'>
          {% if success %}
            <div class="alert alert-success" role="alert">
              <h4 class="alert-heading">{{ 'security.activate.title.successful'|trans }}</h4>
              <p>{{ 'security.activate.success_info'|trans }}</p>
              <hr/>
              <p>
                {{ 'security.activate.login'|trans }}:
                <a href='{{ path('balticrobo_website_security_login') }}'>{{ 'buttons.login'|trans }}</a>
              </p>
            </div>
          {% else %}
            <div class="alert alert-danger" role="alert">
              <h4 class="alert-heading">{{ 'security.activate.title.unsuccessful'|trans }}</h4>
              <p>{{ 'security.activate.unsuccess_info'|trans }}</p>
              <hr/>
              <h6>{{ 'security.activate.exception_message' }}</h6>
              <p>{{ message|trans }}</p>
              <hr/>
              <p>
                {{ 'security.activate.register'|trans }}:
                <a href='{{ path('balticrobo_website_security_register') }}'>{{ 'buttons.register'|trans }}</a>
              <br/>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
