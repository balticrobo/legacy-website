{% extends '_base.html.twig' %}

{# TODO: Add missing translations #}
{% block body %}
  <div class='wrapper'>
    {% include '_common/header.html.twig' %}
  </div>
  {% include '_common/menu.html.twig' %}
  <div class='wrapper'>
    <div class='container'>
      <div class='row'>
        <div class='col-12 col-md-6 offset-md-3'>
          {% if not exception %}
            <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">{{ 'security.forgotten_password_success.title.successful'|trans }}</h4>
            <p>{{ 'security.forgotten_password_success.success_info'|trans }}</p>
            <hr/>
            <p>{{ 'security.forgotten_password_success.email_info'|trans({'%email%': email})|raw }}</p>
            <small>{{ 'security.forgotten_password_success.additional_info'|trans }}</small>
          </div>
          {% else %}
            <div class="alert alert-danger" role="alert">
              <h4 class="alert-heading">{{ 'security.forgotten_password_success.title.unsuccessful'|trans }}</h4>
              <p>{{ 'security.forgotten_password_success.unsuccess_info'|trans }}</p>
              <hr/>
              <p>{{ exception|trans({}, 'exceptions') }}</p>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
