{% extends '_admin_base.html.twig' %}

{% block body %}
  <div class='row'>
    <div class='col-12 col-sm-6 offset-sm-6 p-3'>
      <a href='{{ path('balticrobo_website_cms_newsletter_csvlist') }}' class='btn btn-primary btn-block'>
        {{ '_button.get_csv'|trans }}
      </a>
    </div>
    <div class='col-12'>
      <table class='table table-hover'>
        <thead>
        <tr>
          <th class='text-center'>{{ 'cms.newsletter.mail'|trans }}</th>
          <th class='text-center'>{{ 'cms.newsletter.created_at'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for record in records %}
          <tr>
            <td>{{ record.email }}</td>
            <td>{{ record.createdAt|date('Y-m-d H:i') }}</td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
