{% extends '_admin_base.html.twig' %}

{% block body %}
  <div class='row'>
    <div class='col-12'>
      <table class='table table-hover'>
        <thead>
        <tr>
          <th class='w-10 text-center'><i class='fa fa-fw fa-hashtag'></i></th>
          <th class='text-center'>Drużyna</th>
          <th class='text-center'>Członkowie</th>
          <th class='text-center'>Konstrukcje</th>
        </tr>
        </thead>
        <tbody>
        {% for record in records %}
          <tr>
            <td class='align-middle text-center display-4'>{{ record.id }}</td>
            <td class='align-middle'>[<strong>{{ record.identifier }}</strong>] {{ record.name }}</td>
            <td class='align-middle'><ul class='list-unstyled m-0'>
              {% for member in record.members %}
                <li>{{ member.name }}</li>
              {% endfor %}
            </ul></td>
            <td class='align-middle'><ul class='list-unstyled m-0'>
              {% for construction in record.constructions %}
                <li>
                  {{ construction.name }}
                  <small>({{ construction.competitions|length }} konkurencji)</small>
                </li>
              {% endfor %}
            </ul></td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
