{% extends '_admin_base.html.twig' %}

{% block body %}
  <div class='row'>
    <div class='col-12'>
      <table class='table table-hover'>
        <thead>
        <tr>
          <th class='w-10 text-center'><i class='fa fa-fw fa-hashtag'></i></th>
          <th class='text-center'>Imię i nazwisko</th>
          <th class='text-center'>Drużyna</th>
          <th class='text-center'>Rozmiar koszulki</th>
        </tr>
        </thead>
        <tbody>
        {% for record in records %}
          <tr>
            <td class='align-middle text-center'>{{ record.id }}</td>
            <td class='align-middle'>{{ record.name }}</td>
            <td class='align-middle'>{{ record.team.name }}</td>
            <td class='align-middle text-center'>{{ record.namedShirtType|trans }}</td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
