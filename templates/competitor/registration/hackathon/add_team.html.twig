{% extends '_base.html.twig' %}

{% block body %}
  <div class='wrapper'>
    {% include '_common/header.html.twig' %}
  </div>
  {% include '_common/menu.html.twig' %}
  <div class='wrapper'>
    <div class='container'>
      <div class='row'>
        <div class='col-12'>
          <h2>{{ 'competitor_zone.registration.hackathon.add_team'|trans }}</h2>
        </div>
      </div>
    </div>
    <div class='container col-12 col-md-6 offset-md-3'>
      {{ form_start(form, {class: 'form', attr: {novalidate: 'novalidate'}}) }}
      <div class='row'>
        <div class='col-12 col-sm-6'>
          {{ form_row(form.name) }}
        </div>
        <div class='col-12 col-sm-6'>
          {{ form_row(form.city) }}
        </div>
        <div class='col-12 col-sm-6'>
          {{ form_row(form.whyYou) }}
          <small>{{ 'competitor_zone.registration.form.why_you_description'|trans }}</small>
        </div>
        <div class='col-12 col-sm-6'>
          {{ form_row(form.experience) }}
          <small>{{ 'competitor_zone.registration.form.experience_description'|trans }}</small>
        </div>
        <div class='col-12 col-sm-6 offset-sm-6'>
          <button type="submit" class="btn btn-block btn-primary">{{ '_button.add'|trans }}</button>
        </div>
      </div>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
