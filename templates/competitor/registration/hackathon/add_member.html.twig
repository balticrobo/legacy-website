{% extends '_base.html.twig' %}

{% block body %}
  <div class='wrapper'>
    {% include '_common/header.html.twig' %}
  </div>
  {% include '_common/menu.html.twig' %}
  <div class='wrapper'>
    <div class='container'>
      <div class='row'>
        <div class='col-12'>
          <h2>{{ 'competitor_zone.registration.hackathon.add_member'|trans }}</h2>
        </div>
      </div>
    </div>
    <div class='container col-12 col-md-6 offset-md-3'>
      {{ form_start(form, {class: 'form', attr: {novalidate: 'novalidate'}}) }}
      <div class='row'>
        <div class='col-12 col-sm-6'>
          {{ form_row(form.forename) }}
        </div>
        <div class='col-12 col-sm-6'>
          {{ form_row(form.surname) }}
        </div>
        <div class='col-12 col-sm-6'>
          {{ form_row(form.age) }}
        </div>
        <div class='col-12 col-sm-6'>
          {{ form_row(form.shirtType) }}
        </div>
        <div class='col-12 col-sm-6'>
          {{ form_row(form.captain) }}
        </div>
        <div class='col-12 col-sm-6'>
          <button type="submit" class="btn btn-block btn-primary">{{ '_button.add'|trans }}</button>
        </div>
      </div>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
